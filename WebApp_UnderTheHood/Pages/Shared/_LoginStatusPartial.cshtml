@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Logout">
        Welcome @User.Identity.Name
        <button type ="submit" class="m-2 btn btn-link">LogOut</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page ="/Account/Login">Login</a>
}
